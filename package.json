{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf benchmarks/dist \"packages/**/dist\" \"packages/**/node_modules/.cache\"",
    "generate": "node scripts/generate/generate.mjs",
    "lint": "eslint packages --ext mjs,ts --fix",
    "format": "prettier --write \"packages/**/*.{mjs,ts}\"",
    "test": "yarn workspace @joshdb/payloads run build && yarn workspaces foreach -v --no-private run test",
    "build": "yarn workspaces foreach -v --no-private run build",
    "update": "yarn upgrade-interactive",
    "release": "yarn workspaces foreach -v --no-private run release",
    "prepublishOnly": "yarn workspaces foreach -v --no-private run prepublishOnly",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@favware/npm-deprecate": "^1.0.4",
    "@sapphire/eslint-config": "^4.3.3",
    "@sapphire/ts-config": "^3.3.4",
    "@types/jest": "^27.4.1",
    "@types/node": "17.0.23",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-circus": "^27.5.1",
    "lint-staged": "^12.4.0",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-typescript2": "^0.31.2",
    "rollup-plugin-version-injector": "^1.3.3",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josh-development/utilities.git"
  },
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "lint-staged": {
    "*.{mjs,ts}": "eslint --fix --ext mjs,ts"
  },
  "packageManager": "yarn@3.2.0"
}
