{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf coverage \"packages/**/dist\" \"packages/**/build\" \"packages/**/.turbo\" \"packages/**/node_modules/.cache\" \"node_modules/.cache\"",
    "docs": "turbo run docs",
    "lint": "eslint packages --ext mjs,js,ts --fix",
    "format": "prettier --write \"packages/**/{src,tests}/**/*.{mjs,js,ts}\"",
    "test": "vitest run",
    "build": "turbo run build",
    "update": "yarn upgrade-interactive",
    "check-update": "turbo run check-update",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@favware/cliff-jumper": "^2.2.3",
    "@favware/colorette-spinner": "^1.0.1",
    "@favware/npm-deprecate": "^1.0.7",
    "@sapphire/eslint-config": "^5.0.3",
    "@sapphire/ts-config": "^5.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.2.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsup": "^7.3.0",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "vitest": "^0.34.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josh-development/utilities.git"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=7.0.0"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
  "packageManager": "yarn@3.7.0"
}
